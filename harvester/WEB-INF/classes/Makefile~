# variables

JFLAGS = -classpath ../lib/mysql-connector-java.jar:../lib/servlet-api.jar:.

JAVAC = javac

# rules

%.class: %.java
	$(JAVAC) $(JFLAGS) $<

# targets

TARGETS2 = OAIHarvest.class
#          WEB-INF/classes/HarvesterServlet.class
#

TARGETS = OAIHarvest.class \
          HarvesterServlet.class \
          ConfigWriter.class \
          DatabaseConnection.class \
          HarvestConfiguration.class \
          HarvesterThread.class \
          HtmlPane.class \
          HTMLWriter.class \
          NavBar.class \
          OAIConfigEditor.class \
          OAIRecord.class \
          OAIRequest.class \
          OAIResponseHandler.class \
          OAIScheduledHarvest.class \
          RepoList.class \
          RepositoryEditor.class \
          Settings.class \
          StatusPane.class
          
all: $(TARGETS2)


#$(TARGETS): OAIHarvest.java HarvesterServlet.java
	
clean:
	rm *.class
	
install:
	for comp in $(COMPONENTS); do \
	   $(MAKE) -C $$comp; install \
	done
	@echo Finis.

